{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2021"
  },
  "include": ["./src/**/*.ts"]
}
